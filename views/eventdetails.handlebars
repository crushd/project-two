<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4">
        <div class="card-body">
          <h5 class="card-title row">
            <div class="col">{{event.title}} Details</div>
            <div class="col-2"><strong>ID</strong>: {{event.id}}</div>
          </h5>
          <p><strong>Start</strong>: {{event.startdate}}</p>
          <p><strong>End</strong>: {{event.enddate}}</p>
          <p><strong>RSVP:</strong>: {{event.rsvpdate}}</p>
          <p><strong>Description:</strong> {{event.description}}</p>
            <a href="/">← Back To Home</a>
            <a href="event/{{this.id}}">{{this.text}}</a>
            <button id="edit" class="btn btn-success float-right edit"> EDIT </button>
        </div>
      </div>
    </div>
  </div>
</div>
