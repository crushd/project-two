
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script src="../js/eventdetails.js"></script>


<div class="container">
  <div class="row">
    <div class="col-8 offset-2">
      <div class="card mt-4 dropshadow">
        <div class="card-body">
          

          <div class="row">
            <div class="col-9"><h4 class="card-title">{{eventTitle}} Details</h4></div>
            <div class="col-3"><div class="float-right"><a class="btn btn-outline-primary btn-sm" href="../edit/{{eventID}}">Edit <i class="fas fa-pen-alt"></i></a></div></div>
          </div>
            <div class="row">
              <div class="col-4 text-center"><p><strong>Start Date</strong>:<br>{{eventStartDate}}</p></div>
              <div class="col-4 text-center"><p><strong>End Date</strong>:<br>{{eventEndDate}}</p></div>
              <div class="col-4 text-center"><p><strong>RSVP By</strong>:<br>{{eventRsvpDate}}</p></div>
            </div>

            <div class="py-2">
              <div class="card">
                <div class="card-body">
                  <h4 class="card-title">Description</h4>
                  {{eventDescription}}
                </div>
              </div>
            </div>

            <div class="py-2">
              <div class="card">
                <div class="card-body">
                  <div class="row">
                  <div class="col"><h4 class="card-title">Guests</h4></div>
                  <div class="col text-right"><a class="btn btn-outline-primary btn-sm" id="email" href="/invite/{{eventID}}"><i class="fas fa-envelope"></i> Invite Guests</a></div>
                  </div>

                  <div class="dropshadow">
                    <ul id="guest-list" class="list-group">
                        {{#each eventGuestList}}
                        <li data-id="{{this.email}}" class="list-group-item d-flex justify-content-between align-items-center">
                          <a href="mailto:{{this.email}}">{{this.email}}</a>
                          {{#if status}}
                          <span class="badge badge-success">Yes</span>
                          {{else}}
                          <span class="badge badge-danger">No</span>
                          {{/if}}
                          
                        </li>
                        {{/each}}
                    </ul>
                  </div>
                  </ul>
                </div>
              </div>
            </div>

            <script src="../js/index.js"></script>
        
        </div>
      </div>
    </div>
  </div>
</div>